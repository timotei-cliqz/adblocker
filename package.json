{
  "name": "adblocker",
  "version": "1.0.0",
  "description": "Cliqz adblocker library",
  "main": "adblocker.umd.js",
  "repository": "https://www.github.com/cliqz-oss/adblocker",
  "author": "Cliqz",
  "license": "MPL-2.0",
  "module": "build/es6/index.js",
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && tsc -p . --module ES6 --outDir 'build/es6'",
    "prepublish": "npm run build && rollup build/es6/index.js -f umd --name adblocker -o adblocker.umd.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "pretest": "npm run lint",
    "watch-test": "tsc -p . --module commonjs --outDir 'build/commonjs' --watch",
    "build-test": "npm run clean && tsc -p . --module commonjs --outDir 'build/commonjs'",
    "test": "npm run build-test && jest --coverage build/commonjs/test/",
    "dev": "npm run build-test && concurrently 'npm run watch-test' 'jest build/commonjs/test/ --watch'"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "21.1.8",
    "concurrently": "3.5.1",
    "jest": "21.2.1",
    "rollup": "0.52.1",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-json": "2.3.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "@types/text-encoding": "0.0.32",
    "text-encoding": "0.6.4",
    "tldjs": "2.2.0"
  }
}
