{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES6",
    "newLine": "lf",
    "allowJs": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "./index.ts",
    "test/engine.test.ts",
    "test/injection.test.ts",
    "test/matching.test.js",
    "test/parsing.test.ts",
    "test/serialization.test.ts",
    "test/utils.js",
    "test/utils.test.ts"
  ]
}
